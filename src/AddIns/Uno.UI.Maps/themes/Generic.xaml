<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
					xmlns:converters="using:Uno.UI.Converters"
					xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					xmlns:maps="using:Microsoft.UI.Xaml.Controls.Maps"
					xmlns:mapsPresenter="using:Microsoft.UI.Xaml.Controls.Maps.Presenters"
					mc:Ignorable="d">

	<!-- Default style for Microsoft.UI.Xaml.Controls.Maps.MapControl -->
	<Style TargetType="maps:MapControl"
		   x:Key="DefaultMapControlStyle">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="maps:MapControl">
					<mapsPresenter:MapPresenter />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="mapsPresenter:MapPresenter">
		<Setter Property="Background"
				Value="Black" />
		<Setter Property="UseSystemFocusVisuals"
				Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="mapsPresenter:MapPresenter">
					<Grid Background="{TemplateBinding Background}">
						<Grid x:Name="RootGrid">
							<Grid x:Name="MapGrid" />
							<Grid x:Name="LayerGrid" />
						</Grid>
						<Grid x:Name="UiGrid" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
