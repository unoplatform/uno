<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>$(NetWasmPreviousAndCurrent)</TargetFrameworks>
	</PropertyGroup>

	<Import Project="../../targetframework-override.props"/>

	<PropertyGroup>
		<Deterministic>true</Deterministic>
		<AssemblyName>Uno.UI.MSAL</AssemblyName>
		<RootNamespace>Uno.UI.MSAL</RootNamespace>
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<PropertyGroup>
		<UnoRuntimeIdentifier>WebAssembly</UnoRuntimeIdentifier>
		<PlatformItemsBasePath>.\</PlatformItemsBasePath>
	</PropertyGroup>

	<ItemGroup>
		<UpToDateCheckInput Include="ts\**\*" />
		<ConfigFiles Include="tsconfig.json" />
	</ItemGroup>

	<!-- Override TypeScript outFile to target-framework-specific intermediate folder to avoid race condition -->
	<Target Name="_UnoUIMSALSetupTSCompilation" BeforeTargets="CompileTypeScriptWithTSConfig">
		<PropertyGroup>
			<TypeScriptConfigFileAdditionalFlags>$(TypeScriptConfigFileAdditionalFlags) --outFile $(IntermediateOutputPath)MSAL.WebUI.js</TypeScriptConfigFileAdditionalFlags>
		</PropertyGroup>
	</Target>

	<!-- Add the generated TypeScript output as an embedded resource with logical name -->
	<Target Name="_UnoUIMSALAddTypeScriptResource" 
	        Condition="'$(BuildingProject)' != 'false' and '$(DesignTimeBuild)' != 'true'"
	        DependsOnTargets="CompileTypeScriptWithTSConfig" 
	        BeforeTargets="_UnoEmbeddedResourcesInjection">
		<ItemGroup>
			<EmbeddedResource Include="$(IntermediateOutputPath)MSAL.WebUI.js" Condition="Exists('$(IntermediateOutputPath)MSAL.WebUI.js')">
				<LogicalName>Uno.UI.MSAL.WasmScripts.MSAL.WebUI.js</LogicalName>
			</EmbeddedResource>
		</ItemGroup>
	</Target>

	<ItemGroup>
		<PackageReference Include="Microsoft.TypeScript.MSBuild">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Identity.Client" Version="4.72.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Uno.UI.Runtime.WebAssembly\Uno.UI.Runtime.WebAssembly.csproj" />
		<ProjectReference Include="..\..\Uno.UI\Uno.UI.Wasm.csproj">
			<TreatAsPackageReference>false</TreatAsPackageReference>
			<PrivateAssets>all</PrivateAssets>
		</ProjectReference>

		<EmbeddedResource Include="LinkerDefinition.xml">
			<LogicalName>$(AssemblyName).xml</LogicalName>
		</EmbeddedResource>
	</ItemGroup>

	<Target Name="_UnoUIMSALOverrideNuget" AfterTargets="AfterBuild" DependsOnTargets="BuiltProjectOutputGroup" Condition="'$(UnoNugetOverrideVersion)'!=''">

		<PropertyGroup>
			<_OverrideTargetFramework>$(TargetFramework)</_OverrideTargetFramework>
			<_TargetNugetFolder>$(NuGetPackageRoot)\uno.ui.msal\$(UnoNugetOverrideVersion)\uno-runtime\$(UnoRuntimeIdentifier.ToLowerInvariant())</_TargetNugetFolder>
		</PropertyGroup>
		<ItemGroup>
			<_OutputFiles Include="$(TargetDir)**" />
		</ItemGroup>
		<MakeDir Directories="$(_TargetNugetFolder)" />

		<Message Importance="high" Text="OVERRIDING NUGET PACKAGE CACHE: $(_TargetNugetFolder)" />

		<Copy SourceFiles="@(_OutputFiles)" DestinationFiles="@(_OutputFiles->'$(_TargetNugetFolder)\%(RecursiveDir)%(Filename)%(Extension)')" />
		<Copy SourceFiles="@(_OutputFilesPDB)" DestinationFiles="@(_OutputFilesPDB->'$(_TargetNugetFolder)\%(RecursiveDir)%(Filename).pdb')" />
	</Target>

	<!-- Workaround for missing target running on .NET 5 -->
	<Target Name="GetTargetPath" />

</Project>
