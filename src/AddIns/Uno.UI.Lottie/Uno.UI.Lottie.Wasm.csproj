<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>$(NetWasmPreviousAndCurrent)</TargetFrameworks>
	</PropertyGroup>

	<Import Project="../../targetframework-override.props" />

	<PropertyGroup>
		<Deterministic>true</Deterministic>

		<AssemblyName>Uno.UI.Lottie</AssemblyName>
		<RootNamespace>Uno.UI.Lottie</RootNamespace>

		<UnoRuntimeIdentifier>WebAssembly</UnoRuntimeIdentifier>
		<PlatformItemsBasePath>.\</PlatformItemsBasePath>
		<Nullable>enable</Nullable>

		<_UnoRequiresEmbeddedResourcesInjection>true</_UnoRequiresEmbeddedResourcesInjection>
		<UnoUIMSBuildTasksPath>$(MSBuildThisFileDirectory)..\..\SourceGenerators\Uno.UI.Tasks\bin\$(Configuration)_Shadow</UnoUIMSBuildTasksPath>
	</PropertyGroup>
	
	<Import Project="..\..\SourceGenerators\Uno.UI.Tasks\Content\Uno.UI.Tasks.targets" Condition="'$(SkipUnoResourceGeneration)' == '' " />

	<ItemGroup>
		<UpToDateCheckInput Include="ts\**\*" />
		<ConfigFiles Include="tsconfig.json" />
	</ItemGroup>

	<!-- Override TypeScript outFile to target-framework-specific intermediate folder to avoid race condition -->
	<Target Name="_UnoUILottieSetupTSCompilation" BeforeTargets="CompileTypeScriptWithTSConfig">
		<PropertyGroup>
			<TypeScriptConfigFileAdditionalFlags>$(TypeScriptConfigFileAdditionalFlags) --outFile $(IntermediateOutputPath)uno-lottie.js</TypeScriptConfigFileAdditionalFlags>
			<!-- Keep the compiler log beside the per-target output so cleanup stays scoped -->
			<TSCompilerOutputLogDirectory>$(IntermediateOutputPath)</TSCompilerOutputLogDirectory>
		</PropertyGroup>
		<!-- Prevent TypeScriptDeleteOutputFromOtherConfigs from sweeping outputs generated by other target frameworks -->
		<ItemGroup>
			<TSOutputLogsFromOtherBuilds Include="$(IntermediateOutputPath)**\Tsc*.out"
				Exclude="$(TSCompilerOutputLogDirectory)Tsc*.out" />
		</ItemGroup>
	</Target>

	<!-- Add the generated TypeScript output as an embedded resource with logical name -->
	<Target Name="_UnoUILottieAddTypeScriptResource" 
	        BeforeTargets="_UnoEmbeddedResourcesInjection">
		<ItemGroup>
			<_UnoInjectedResource Include="$(IntermediateOutputPath)uno-lottie.js" Condition="Exists('$(IntermediateOutputPath)uno-lottie.js')">
				<LogicalName>Uno.UI.Lottie.WasmScripts.uno-lottie.js</LogicalName>
			</_UnoInjectedResource>
		</ItemGroup>
	</Target>

	<PropertyGroup Condition="'$(BuildingInsideUnoSourceGenerator)' != ''">
		<TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.TypeScript.MSBuild" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Uno.Foundation.Runtime.WebAssembly\Uno.Foundation.Runtime.WebAssembly.csproj" />
		<ProjectReference Include="..\..\Uno.UI.Runtime.WebAssembly\Uno.UI.Runtime.WebAssembly.csproj" />
		<ProjectReference Include="..\..\Uno.UI\Uno.UI.Wasm.csproj" />
	</ItemGroup>

	<Import Project="..\..\SourceGenerators\Uno.UI.SourceGenerators\Content\Uno.UI.SourceGenerators.props" />

	<Target Name="_UnoUILottieOverrideNuget" AfterTargets="AfterBuild" DependsOnTargets="BuiltProjectOutputGroup" Condition="'$(UnoNugetOverrideVersion)'!=''">

		<PropertyGroup>
			<_OverrideTargetFramework>$(TargetFramework)</_OverrideTargetFramework>
			<_TargetNugetFolder>$(NuGetPackageRoot)\uno.ui.lottie\$(UnoNugetOverrideVersion)\uno-runtime\$(UnoRuntimeIdentifier.ToLowerInvariant())</_TargetNugetFolder>
		</PropertyGroup>
		<ItemGroup>
			<_OutputFiles Include="$(TargetDir)**" />
		</ItemGroup>
		<MakeDir Directories="$(_TargetNugetFolder)" />

		<Message Importance="high" Text="OVERRIDING NUGET PACKAGE CACHE: $(_TargetNugetFolder)" />

		<Copy SourceFiles="@(_OutputFiles)" DestinationFiles="@(_OutputFiles->'$(_TargetNugetFolder)\%(RecursiveDir)%(Filename)%(Extension)')" />
		<Copy SourceFiles="@(_OutputFilesPDB)" DestinationFiles="@(_OutputFilesPDB->'$(_TargetNugetFolder)\%(RecursiveDir)%(Filename).pdb')" />
	</Target>

	<ItemGroup>
		<SourceGeneratorInput Remove="AssemblyInfo.cs" />
	</ItemGroup>

</Project>
