<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<UnoGenerateHotReloadInfo>True</UnoGenerateHotReloadInfo>
	</PropertyGroup>

	<PropertyGroup Condition="'$(UnoIsHotReloadHost)'=='true'">
		<RuntimeIdentifier Condition="'$(UnoHotReloadRuntimeIdentifier)' != ''">$(UnoHotReloadRuntimeIdentifier)</RuntimeIdentifier>
		<TargetFramework Condition="'$(UnoHotReloadTargetFramework)' != ''">$(UnoHotReloadTargetFramework)</TargetFramework>
	</PropertyGroup>

	<Target Name="ValidateDevServerConfiguration"
		BeforeTargets="CoreCompile">
		<Error Condition="$(Optimize) == 'true'"
			Text="The DevServer package is intended for development builds only and should not be used with optimized/release builds. Please remove the reference to Uno.WinUI.DevServer or set 'Optimize' to 'false'." />
	</Target>

</Project>
