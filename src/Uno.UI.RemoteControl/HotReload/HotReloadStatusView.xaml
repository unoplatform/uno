	<local:EntryIconToObjectConverter x:Key="EntryIconToContentTemplate"
									  SuccessValue="{StaticResource HotReloadIconSuccess}"
									  FailedValue="{StaticResource HotReloadIconFailed}"
									  ConnectionSuccessValue="{StaticResource HotReloadIconConnectionSuccess}"
									  ConnectionFailedValue="{StaticResource HotReloadIconConnectionFailed}"
									  ConnectionWarningValue="{StaticResource HotReloadIconConnectionWarning}" />

	<local:NullStringToCollapsedConverter x:Key="NullStringToCollapsed" />

	<DataTemplate x:Key="OperationTemplate">
		<Grid HorizontalAlignment="Stretch">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="28" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<ContentControl ContentTemplate="{Binding Icon, Converter={StaticResource EntryIconToContentTemplate}}"
							Grid.Column="0"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Margin="5,0,0,0" />

			<StackPanel MinWidth="100"
						VerticalAlignment="Center"
						Grid.Column="1">
				<TextBlock VerticalAlignment="Center"
						   TextWrapping="WrapWholeWords"
						   Text="{Binding Title}" />

				<TextBlock VerticalAlignment="Center"
						   TextWrapping="WrapWholeWords"
						   FontSize="9"
						   Opacity="0.6"
						   Text="{Binding Description}"
						   Visibility="{Binding Description, Converter={StaticResource NullStringToCollapsed}}" />
			</StackPanel>

			<TextBlock Text="{Binding TimeInfo}"
					   Grid.Column="2"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Right"
					   TextAlignment="Right"
					   Margin="20,0,0,0"
					   FontSize="9"
					   Opacity="0.45" />
		</Grid>
	</DataTemplate>

	<Style TargetType="local:HotReloadStatusView">
		<Setter Property="ProcessingNotification">
			<Setter.Value>
				<diag:DiagnosticViewNotification Duration="0:0:0"
												 Options="EvenIfExpended">
					<diag:DiagnosticViewNotification.ContentTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal"
										Background="{ThemeResource NotificationBackgroundBrush}"
										BorderThickness="1"
										BorderBrush="{ThemeResource NotificationBorderBrush}"
										Height="32"
										CornerRadius="4">
								<StackPanel.Resources>
									<Style TargetType="TextBlock">
										<Setter Property="FontSize" Value="11" />
									</Style>
								</StackPanel.Resources>
								<ContentControl ContentTemplate="{StaticResource HotReloadIconProcessing}"
												HorizontalAlignment="Center"
												VerticalAlignment="Center"
												Margin="5,0,0,0" />
								<TextBlock Margin="8,0"
										   Text="Processing..."
										   VerticalAlignment="Center"
										   HorizontalAlignment="Center" />
							</StackPanel>
						</DataTemplate>
					</diag:DiagnosticViewNotification.ContentTemplate>
				</diag:DiagnosticViewNotification>
			</Setter.Value>
		</Setter>

		<Setter Property="SuccessNotification">
			<Setter.Value>
				<diag:DiagnosticViewNotification Duration="0:0:5"
												 Options="EvenIfExpended">
					<diag:DiagnosticViewNotification.ContentTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal"
										Background="{ThemeResource NotificationBackgroundBrush}"
										BorderThickness="1"
										BorderBrush="{ThemeResource NotificationBorderBrush}"
										Height="32"
										CornerRadius="4">
								<StackPanel.Resources>
									<Style TargetType="TextBlock">
										<Setter Property="FontSize" Value="11" />
									</Style>
								</StackPanel.Resources>
								<ContentControl ContentTemplate="{StaticResource HotReloadIconSuccess}"
												HorizontalAlignment="Center"
												VerticalAlignment="Center"
												Margin="5,0,0,0" />
								<TextBlock Margin="8,0"
										   Text="{Binding ToastDescription}"
										   VerticalAlignment="Center"
										   HorizontalAlignment="Center" />
							</StackPanel>
						</DataTemplate>
					</diag:DiagnosticViewNotification.ContentTemplate>
				</diag:DiagnosticViewNotification>
			</Setter.Value>
		</Setter>

		<Setter Property="FailureNotification">
			<Setter.Value>
				<diag:DiagnosticViewNotification Duration="0:0:5"
												 Options="EvenIfExpended">
					<diag:DiagnosticViewNotification.ContentTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal"
										Background="{ThemeResource NotificationBackgroundBrush}"
										BorderThickness="1"
										BorderBrush="{ThemeResource NotificationBorderBrush}"
										Height="32"
										CornerRadius="4">
								<StackPanel.Resources>
									<Style TargetType="TextBlock">
										<Setter Property="FontSize" Value="11" />
									</Style>
								</StackPanel.Resources>
								<ContentControl ContentTemplate="{StaticResource HotReloadIconFailed}"
												HorizontalAlignment="Center"
												VerticalAlignment="Center"
												Margin="5,0,0,0" />
								<TextBlock Margin="8,0"
										   Text="{Binding ToastDescription}"
										   VerticalAlignment="Center"
										   HorizontalAlignment="Center" />
							</StackPanel>
						</DataTemplate>
					</diag:DiagnosticViewNotification.ContentTemplate>
				</diag:DiagnosticViewNotification>
			</Setter.Value>
		</Setter>

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:HotReloadStatusView">
					<Grid x:Name="Root">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="Status">
								<VisualState x:Name="Unknown">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.ContentTemplate" Value="{StaticResource HotReloadIconProcessing}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Initializing">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.ContentTemplate" Value="{StaticResource HotReloadIconProcessing}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Ready">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.ContentTemplate" Value="{StaticResource HotReloadIconConnectionSuccess}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Warning">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.ContentTemplate" Value="{StaticResource HotReloadIconConnectionWarning}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Error">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.ContentTemplate" Value="{StaticResource HotReloadIconConnectionFailed}" />
									</VisualState.Setters>
								</VisualState>
							</VisualStateGroup>

							<VisualStateGroup x:Name="Result">
								<!--  Visually we rely only on the notifications for the results.  -->
								<VisualState x:Name="None" />
								<VisualState x:Name="Success" />
								<VisualState x:Name="Failed" />
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<Button HorizontalAlignment="Center"
								VerticalAlignment="Center">
							<Button.Resources>
								<Style x:Key="HotReloadFlyoutPresenterStyle"
									   TargetType="FlyoutPresenter">
									<Setter Property="CornerRadius" Value="8" />
									<Setter Property="MaxWidth" Value="420" />
									<Setter Property="MaxHeight" Value="420" />
								</Style>
							</Button.Resources>
							<Button.Flyout>
								<Flyout Placement="BottomEdgeAlignedLeft"
										FlyoutPresenterStyle="{StaticResource HotReloadFlyoutPresenterStyle}">
									<Grid>
										<Grid.Resources>
											<Style TargetType="TextBlock">
												<Setter Property="FontSize" Value="11" />
											</Style>
										</Grid.Resources>
										<StackPanel Spacing="10">
											<TextBlock Text="Events"
													   FontWeight="SemiLight"
													   TextWrapping="WrapWholeWords"
													   VerticalAlignment="Center" />
											<mux:ItemsRepeater ItemsSource="{TemplateBinding History}"
															   ItemTemplate="{StaticResource OperationTemplate}">
												<mux:ItemsRepeater.Layout>
													<StackLayout Spacing="10" />
												</mux:ItemsRepeater.Layout>
											</mux:ItemsRepeater>
										</StackPanel>
									</Grid>
								</Flyout>
							</Button.Flyout>

							<ContentControl x:Name="HotReloadIcon"
											ContentTemplate="{StaticResource HotReloadIconConnectionWarning}"
											Height="20"
											Width="20"
											HorizontalContentAlignment="Center"
											VerticalContentAlignment="Center" />
						</Button>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
