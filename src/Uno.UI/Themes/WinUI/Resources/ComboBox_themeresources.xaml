                            HorizontalAlignment="Right"
                            x:Load="False"/>
                        <FontIcon x:Name="DropDownGlyph"
                            MinHeight="{ThemeResource ComboBoxMinHeight}"
                            Grid.Row="1"
                            Grid.Column="2"
                            IsHitTestVisible="False"
                            Margin="0,0,10,0"
                            Foreground="{ThemeResource ComboBoxDropDownGlyphForeground}"
