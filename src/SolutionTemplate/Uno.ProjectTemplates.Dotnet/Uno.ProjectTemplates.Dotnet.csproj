			<Pack>true</Pack>
			<PackagePath>content/xamarinforms-wasm</PackagePath>
		</Content>
		<Content Include="content\unoapp-uitest\**\*">
			<PackagePath>content\unoapp-uitest</PackagePath>
			<Pack>true</Pack>
		</Content>
		<Content Include="content/xamarinforms-wasm/UnoXFQuickStart.Wasm/**/*.*">
			<Pack>true</Pack>
