		<_UnoLibTemplateFilesExclude Include="..\UnoLibraryTemplate.netcore\Properties\**" />
		<_UnoLibTemplateFilesExclude Include="..\UnoLibraryTemplate.netcore\UnoLibraryTemplate.netcore.csproj" />

		<_UnoLibTemplateFiles Include="..\UnoLibraryTemplate.netcore\**" Exclude="@(_UnoLibTemplateFilesExclude)" />
