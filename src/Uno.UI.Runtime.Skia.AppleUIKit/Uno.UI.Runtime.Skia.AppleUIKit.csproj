<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>$(NetPreviousNetCoreApple)</TargetFrameworks>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<Import Project="../SourceGenerators/Uno.UI.SourceGenerators/Content/Uno.UI.SourceGenerators.props" />
	<Import Project="../targetframework-override.props" />
	
	<PropertyGroup>
		<GeneratePackageOnBuild Condition="'$(Configuration)'=='Release'">true</GeneratePackageOnBuild>
		<authors>Uno Platform</authors>
		<PackageProjectUrl>https://github.com/unoplatform/uno</PackageProjectUrl>
		<PackageIcon>uno.png</PackageIcon>
		<RepositoryUrl>https://github.com/unoplatform/uno</RepositoryUrl>
		<Description>This package provides the platform support for Skia Apple iOS, Mac Catalyst, and tvOS in Uno Platform projects.</Description>
		<Copyright>Copyright (C) 2015-$([System.DateTime]::Now.ToString(`yyyy`)) Uno Platform Inc. - all rights reserved</Copyright>

		<PackageId Condition="'$(UNO_UWP_BUILD)'!='true'">Uno.WinUI.Runtime.Skia.AppleUIKit</PackageId>

		<RootNamespace>Uno.WinUI.Runtime.Skia.AppleUIKit</RootNamespace>

		<UseCommonOverridePackage>true</UseCommonOverridePackage>
		<DefineConstants>$(DefineConstants);UIKIT_SKIA</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\TextBox\InputReturnTypeExtensions.UIKit.cs" Link="UI\Xaml\Controls\TextBox\InputReturnTypeExtensions.UIKit.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\TextBox\InputScopeHelper.UIKit.cs" Link="UI\Xaml\Controls\TextBox\InputScopeHelper.UIKit.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Window\Native\UIKit\NativeWindowHelpers.UIKit.cs" Link="UI\Xaml\NativeWindowHelpers.UIKit.cs" />
	</ItemGroup>

	<ItemGroup Condition="!$(IsTvOS)">
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\LocalWKUIDelegate.iOS.cs" Link="UI\Xaml\Controls\WebView\LocalWKUIDelegate.Apple.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeWebView.iOS.cs" Link="UI\Xaml\Controls\WebView\NativeWebView.Apple.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\UnoWKWebView.ErrorMap.iOS.cs" Link="UI\Xaml\Controls\WebView\UnoWKWebView.ErrorMap.Apple.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\UnoWKWebView.iOS.cs" Link="UI\Xaml\Controls\WebView\UnoWKWebView.Apple.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\UnoWKWebView.WebResourceRequested.iOS.cs" Link="UI\Xaml\Controls\WebView\UnoWKWebView.WebResourceRequested.Apple.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\WebViewNavigationDelegate.iOS.cs" Link="UI\Xaml\Controls\WebView\WebViewNavigationDelegate.Apple.cs" />
		<!-- ISupportsWebResourceRequested.cs is NOT included here because it's already compiled into Uno.UI.Skia.
		     Having it in both assemblies creates duplicate types and breaks the runtime type check for WebResourceRequested support. -->

		<!-- Native WebResourceRequested implementations -->
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2WebResourceRequestedEventArgs.iOS.cs" Link="UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2WebResourceRequestedEventArgs.iOS.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2WebResourceRequest.iOS.cs" Link="UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2WebResourceRequest.iOS.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2WebResourceResponse.iOS.cs" Link="UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2WebResourceResponse.iOS.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2HttpRequestHeaders.iOS.cs" Link="UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2HttpRequestHeaders.iOS.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2Extensions.iOS.cs" Link="UI\Xaml\Controls\WebView\Native\iOSmacOS\NativeCoreWebView2Extensions.iOS.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\NativeCoreWebView2HttpHeadersCollectionIterator.cs" Link="UI\Xaml\Controls\WebView\Native\NativeCoreWebView2HttpHeadersCollectionIterator.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\NativeCoreWebView2HttpResponseHeaders.cs" Link="UI\Xaml\Controls\WebView\Native\NativeCoreWebView2HttpResponseHeaders.cs" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\Common\uno.png" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="SkiaSharp" />
		<PackageReference Include="HarfBuzzSharp" />
		<PackageReference Include="SkiaSharp.Views" />
		<PackageReference Include="Uno.icu-ios" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Uno.Foundation.Logging\Uno.Foundation.Logging.csproj" />
		<ProjectReference Include="..\Uno.Foundation\Uno.Foundation.netcoremobile.csproj" TreatAsPackageReference="false" PrivateAssets="all" />
		<ProjectReference Include="..\Uno.UI\Uno.UI.Skia.csproj" />
		<ProjectReference Include="..\Uno.UWP\Uno.netcoremobile.csproj" TreatAsPackageReference="false" PrivateAssets="all" />
		<ProjectReference Include="..\Uno.UI.Runtime.Skia\Uno.UI.Runtime.Skia.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="build/*.*">
			<Pack>true</Pack>
			<PackagePath>build</PackagePath>
		</Content>
	</ItemGroup>

	<!--<Import Project="..\SourceGenerators\Uno.UI.Tasks\Content\Uno.UI.Tasks.targets" Condition="'$(SkipUnoResourceGeneration)' == '' " />-->

</Project>
