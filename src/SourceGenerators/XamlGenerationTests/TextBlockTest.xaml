		<Run x:Name="R31">
			Run/Text()$multi-line
		</Run>
		<Run x:Name="R32">
			Run/Text()$multi-line1
			Run/Text()$multi-line2
		</Run>
		<Run x:Name="R41">
			<Run.Text>
				Run/Run.Text/Text()$multi-line
