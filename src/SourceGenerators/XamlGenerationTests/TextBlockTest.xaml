		<Bold x:Name="B11">Bold/Text()</Bold>
		<Bold x:Name="B12"> Bold/Text()</Bold>
		<Bold x:Name="B13"> Bold/Text() </Bold>
		<Bold x:Name="B14">  Bold/Text()  </Bold>

		<Bold x:Name="B31">
			Bold/Text()$multi-line
		</Bold>
		<Bold x:Name="B32">
			Bold/Text()$multi-line1
			Bold/Text()$multi-line2
		</Bold>
	</TextBlock>

