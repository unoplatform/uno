<UserControl x:Class="Uno.UI.RuntimeTests.Tests.Windows_UI_Xaml_Controls.Canvas_With_Outer_Clip"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.Canvas"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">


	<StackPanel x:Name="OuterGrid"
				Background="#FFFF0000"
				Padding="20,100,20,20"
				VerticalAlignment="Stretch"
				HorizontalAlignment = "Stretch">
		<Border HorizontalAlignment="Center"
				VerticalAlignment="Top">
			<Border.Clip>
				<RectangleGeometry Rect="0, 0, 200, 50" />
			</Border.Clip>
			<Grid Width="200"
				  Height="50"
				  Background="LightPink">
				<Canvas HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch">
					<Rectangle Width="150"
							   Height="80"
							   Canvas.Left="25"
							   Canvas.Top="15"
							   Fill="Blue" />
				</Canvas>
			</Grid>
		</Border>
		<Border x:Name="LocatorBorder1"
				HorizontalAlignment="Center"
				VerticalAlignment="Top"
				Width="200"
				Height="30"
				Background="Transparent" />
		<Border HorizontalAlignment="Center"
				VerticalAlignment="Top">
			<Grid Width="200"
				  Height="50"
				  Background="LightPink">
				<Canvas HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch">
					<Rectangle Width="150"
							   Height="80"
							   Canvas.Left="25"
							   Canvas.Top="15"
							   Fill="Blue" />
				</Canvas>
			</Grid>
		</Border>
		<Border x:Name="LocatorBorder2"
				HorizontalAlignment="Center"
				VerticalAlignment="Top"
				Width="200"
				Height="30"
				Background="Transparent" />
	</StackPanel>
</UserControl>
