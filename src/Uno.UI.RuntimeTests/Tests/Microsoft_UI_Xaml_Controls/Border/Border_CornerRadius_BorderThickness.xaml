<UserControl x:Class="Uno.UI.RuntimeTests.Tests.Windows_UI_Xaml_Controls.BorderCornerRadiusBorderThickness"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <StackPanel Spacing="10"
                Width="400">
        <Grid x:Name="MyBackgroundUnderneath"
              Width="200"
              Height="200"
              Background="#FFFFFFFF">
            <Border Width="200"
                    Height="200"
                    x:Name="MyBorder"
                    x:FieldModifier="Public"
                    BorderThickness="1"
                    CornerRadius="10"
                    BorderBrush="#80FF0000"
                    Background="#800000FF" />
            <Border BorderBrush="Yellow"
                    x:Name="LeftTarget"
                    x:FieldModifier="Public"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    BorderThickness="1"
                    Height="10"
                    Width="10" />
            <Border BorderBrush="Yellow"
                    x:Name="TopTarget"
                    x:FieldModifier="Public"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    BorderThickness="1"
                    Height="10"
                    Width="10" />
            <Border BorderBrush="Yellow"
                    x:Name="RightTarget"
                    x:FieldModifier="Public"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    BorderThickness="1"
                    Height="10"
                    Width="10" />
            <Border BorderBrush="Yellow"
                    x:Name="BottomTarget"
                    x:FieldModifier="Public"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    BorderThickness="1"
                    Height="10"
                    Width="10" />
            <Border BorderBrush="Yellow"
                    x:Name="CenterTarget"
                    x:FieldModifier="Public"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderThickness="1"
                    Height="10"
                    Width="10" />
        </Grid>
    </StackPanel>
</UserControl>
