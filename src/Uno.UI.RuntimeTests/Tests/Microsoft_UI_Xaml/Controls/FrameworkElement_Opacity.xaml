<Page x:Class="Uno.UI.RuntimeTests.Tests.Windows_UI_Xaml.Controls.FrameworkElement_Opacity"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:UITests.Windows_UI_Xaml.FrameworkElementTests"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<!-- As the test is about opacity, the background can have effect on test outcome -->
	<!-- To make the test stable when using UWP/Fluent styles, and when running with Light/Dark themes, we explicitly set the background -->
	<StackPanel Background="White">
		<TextBlock Text="Opacity 1.0 ██████████"
				   x:Name="tbOpacity1_0"
				   x:FieldModifier="public"
				   FontFamily="Courier New"
				   Foreground="Black"
				   Opacity="1"
				   FontSize="20" />
		<TextBlock Text="Opacity 0.5 ██████████"
				   x:Name="tbOpacity0_5"
				   x:FieldModifier="public"
				   FontFamily="Courier New"
				   Opacity="0.5"
				   Foreground="Black"
				   FontSize="20" />
		<TextBlock Text="Opacity 0.1 ██████████"
				   x:Name="tbOpacity0_1"
				   x:FieldModifier="public"
				   FontFamily="Courier New"
				   Opacity="0.1"
				   Foreground="Black"
				   FontSize="20" />
		<Border Opacity="0.5"
				Background="Red"
				x:Name="border0_5"
				x:FieldModifier="public">
			<TextBlock Text="Border Opacity 0.5 ██████████"
					   x:Name="tbBorderOpacity0_5"
					   x:FieldModifier="public"
					   FontFamily="Courier New"
					   Foreground="Black"
					   FontSize="20" />
		</Border>
		<Border Opacity="0.5"
				Background="Red"
				CornerRadius="20"
				x:Name="BorderRoundedOpacity0_5"
				x:FieldModifier="public">
			<TextBlock Text="Rounded Border Opacity 0.5 ██████████"
					   x:Name="tbBorderRoundedOpacity0_5"
					   x:FieldModifier="public"
					   FontFamily="Courier New"
					   Foreground="Black"
					   FontSize="20" />
		</Border>
		<Image Source="/Assets/ingredient1.png"
			   Opacity="0.5"
			   Width="75"
			   Height="75"
			   x:Name="ImageOpacity0_5"
			   x:FieldModifier="public" />
		<StackPanel Opacity=".5">
			<TextBlock Text="Inherited Opacity 1.0 ██████████"
					   x:Name="tbInnerOpacity1_0"
					   x:FieldModifier="public"
					   FontFamily="Courier New"
					   Opacity="1"
					   Foreground="Black"
					   FontSize="20" />
			<TextBlock Text="Inherited Opacity 0.5 ██████████"
					   x:Name="tbInnerOpacity0_5"
					   x:FieldModifier="public"
					   FontFamily="Courier New"
					   Opacity="0.5"
					   Foreground="Black"
					   FontSize="20" />
			<TextBlock Text="Inherited Opacity 0.1 ██████████"
					   x:Name="tbInnerOpacity0_1"
					   x:FieldModifier="public"
					   FontFamily="Courier New"
					   Opacity="0.1"
					   Foreground="Black"
					   FontSize="20" />
			<Border Opacity="0.5"
					Background="Red"
					x:Name="BorderInnerOpacity0_5"
					x:FieldModifier="public">
				<TextBlock Text="Inherited Border Opacity 0.5 ██████████"
						   x:Name="tbBorderInnerOpacity0_5"
						   x:FieldModifier="public"
						   FontFamily="Courier New"
						   Foreground="Black"
						   FontSize="20" />
			</Border>
			<Border Opacity="0.5"
					Background="Red"
					CornerRadius="20"
					x:Name="BorderRoundedInnerOpacity0_5"
					x:FieldModifier="public">
				<TextBlock Text="Rounded Border Opacity 0.5 ██████████"
						   x:Name="tbBorderRoundedInnerOpacity0_5"
						   x:FieldModifier="public"
						   FontFamily="Courier New"
						   Foreground="Black"
						   FontSize="20" />
			</Border>
			<Image Source="/Assets/ingredient1.png"
				   Width="75"
				   Height="75"
				   Opacity="0.5"
				   x:Name="ImageInner0_5"
				   x:FieldModifier="public" />
		</StackPanel>
	</StackPanel>
</Page>
