<UserControl
	x:Class="SamplesApp.Windows_UI_Xaml_Shapes.PathTestsControl.Path_Dynamic"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

  <StackPanel>

	<Grid>
	  <!-- Outline -->
	  <Path x:Name="OutlinePath"
			Stroke="{ThemeResource SystemControlBackgroundBaseLowBrush}"
			StrokeThickness="10">
		<Path.Data>
		  <PathGeometry>
			<PathGeometry.Figures>
			  <PathFigureCollection>
				<PathFigure StartPoint="50,5">
				  <PathFigure.Segments>
					<PathSegmentCollection>
					  <ArcSegment IsLargeArc="True"
								  SweepDirection="Clockwise"
								  Size="45,45"
								  Point="49.99,5" />
					</PathSegmentCollection>
				  </PathFigure.Segments>
				</PathFigure>
			  </PathFigureCollection>
			</PathGeometry.Figures>
		  </PathGeometry>
		</Path.Data>
	  </Path>
	  <!-- Progress -->
	  <Path x:Name="ProgressPath"
			Fill="Transparent"
			Stroke="{ThemeResource SystemControlHighlightAccentBrush}"
			StrokeThickness="10">
		<Path.Data>
		  <PathGeometry>
			<PathGeometry.Figures>
			  <PathFigureCollection>
				<PathFigure StartPoint="50,5">
				  <PathFigure.Segments>
					<PathSegmentCollection>
					  <ArcSegment x:Name="ArcSegment"
								  Point="50,5"
								  Size="45,45"
								  SweepDirection="Clockwise"
								  IsLargeArc="False" />
					</PathSegmentCollection>
				  </PathFigure.Segments>
				</PathFigure>
			  </PathFigureCollection>
			</PathGeometry.Figures>
		  </PathGeometry>
		</Path.Data>
	  </Path>
	</Grid>

	<Slider Header="Value"
			Style="{StaticResource XamlDefaultSlider}"
			ValueChanged="Value_Changed"
			Value="0"
			Minimum="0"
			Maximum="100" />

  </StackPanel>

</UserControl>
