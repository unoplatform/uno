<Page
	x:Class="UITests.Windows_UI_Xaml_Media.GradientBrushTests.GradientsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Spacing="10">
			<TextBlock FontSize="15">Radial Gradient as background on a Rectangle / Border / Ellipse</TextBlock>
			<StackPanel Orientation="Horizontal" Spacing="10">
				<Rectangle Width="100" Height="100">
					<Rectangle.Fill>
						<RadialGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</RadialGradientBrush>
					</Rectangle.Fill>
				</Rectangle>

				<Border Width="100" Height="100">
					<Border.Background>
						<RadialGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</RadialGradientBrush>
					</Border.Background>
				</Border>
				<Ellipse Width="100" Height="100">
					<Ellipse.Fill>
						<RadialGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</RadialGradientBrush>
					</Ellipse.Fill>
				</Ellipse>
				<Ellipse Width="150" Height="100">
					<Ellipse.Fill>
						<RadialGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</RadialGradientBrush>
					</Ellipse.Fill>
				</Ellipse>
				<Rectangle x:Name="Rect" Width="200" Height="200">
					<Rectangle.Fill>
						<RadialGradientBrush
							x:Name="RadialGradientBrushExample"
							MappingMode="RelativeToBoundingBox"
							Center="0.25,0.25"
							RadiusX=".5" RadiusY=".5"
							GradientOrigin="0.5,.25"
							SpreadMethod="Pad">
							<GradientStop Color="Yellow" Offset="0.0" />
							<GradientStop Color="Blue" Offset="1" />
						</RadialGradientBrush>
					</Rectangle.Fill>
				</Rectangle>
			</StackPanel>
			<TextBlock FontSize="15">Radial Gradient as border/stroke on a Rectangle/ Border / Ellipse </TextBlock>
			<StackPanel Orientation="Horizontal" Spacing="10">
				<Rectangle Width="100" Height="100" StrokeThickness="40" Fill="DarkGray">
					<Rectangle.Stroke>
						<RadialGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</RadialGradientBrush>
					</Rectangle.Stroke>
				</Rectangle>

				<Border Width="100" Height="100" BorderThickness="40" Background="DarkGray">
					<Border.BorderBrush>
						<RadialGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</RadialGradientBrush>
					</Border.BorderBrush>
				</Border>
				<Ellipse Width="100" Height="100" StrokeThickness="40" Fill="DarkGray">
					<Ellipse.Stroke>
						<RadialGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</RadialGradientBrush>
					</Ellipse.Stroke>
				</Ellipse>
				<Ellipse Width="150" Height="100" StrokeThickness="40" Fill="DarkGray">
					<Ellipse.Stroke>
						<RadialGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</RadialGradientBrush>
					</Ellipse.Stroke>
				</Ellipse>
			</StackPanel>
			<TextBlock FontSize="15">Linear Gradient as background on a Rectangle + Border (relative + absolute)</TextBlock>
			<StackPanel Orientation="Horizontal" Spacing="10">
				<Rectangle Width="100" Height="100">
					<Rectangle.Fill>
						<LinearGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</LinearGradientBrush>
					</Rectangle.Fill>
				</Rectangle>
				<Border Width="100" Height="100">
					<Border.Background>
						<LinearGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</LinearGradientBrush>
					</Border.Background>
				</Border>
				<Rectangle Width="100" Height="100">
					<Rectangle.Fill>
						<LinearGradientBrush MappingMode="Absolute" EndPoint="100,100" FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</LinearGradientBrush>
					</Rectangle.Fill>
				</Rectangle>
				<Border Width="100" Height="100">
					<Border.Background>
						<LinearGradientBrush MappingMode="Absolute" EndPoint="100,100" FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</LinearGradientBrush>
					</Border.Background>
				</Border>
			</StackPanel>
			<TextBlock FontSize="15">Linear Gradient as border/stroke on a Rectangle + Border (relative + absolute)</TextBlock>
			<StackPanel Orientation="Horizontal" Spacing="10">
				<Rectangle Width="100" Height="100" StrokeThickness="40">
					<Rectangle.Stroke>
						<LinearGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</LinearGradientBrush>
					</Rectangle.Stroke>
				</Rectangle>
				<Border Width="100" Height="100" BorderThickness="40">
					<Border.BorderBrush>
						<LinearGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</LinearGradientBrush>
					</Border.BorderBrush>
				</Border>
				<Rectangle Width="100" Height="100" StrokeThickness="40">
					<Rectangle.Stroke>
						<LinearGradientBrush MappingMode="Absolute" EndPoint="100,100" FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</LinearGradientBrush>
					</Rectangle.Stroke>
				</Rectangle>
				<Border Width="100" Height="100" BorderThickness="40">
					<Border.BorderBrush>
						<LinearGradientBrush MappingMode="Absolute" EndPoint="100,100" FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</LinearGradientBrush>
					</Border.BorderBrush>
				</Border>
			</StackPanel>
			<TextBlock FontSize="15">Text with Radial/Linear gradient as foreground brush (fallback=green)</TextBlock>
			<StackPanel Orientation="Horizontal" Spacing="10">
				<TextBlock Text="UNO" FontSize="110" FontWeight="Bold">
					<TextBlock.Foreground>
						<RadialGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</RadialGradientBrush>
					</TextBlock.Foreground>
				</TextBlock>
				<TextBlock Text="UNO" FontSize="110" FontWeight="Bold">
					<TextBlock.Foreground>
						<LinearGradientBrush FallbackColor="Red">
							<GradientStop Color="Blue" Offset="0.0" />
							<GradientStop Color="Yellow" Offset="0.2" />
							<GradientStop Color="LimeGreen" Offset="0.4" />
							<GradientStop Color="LightBlue" Offset="0.6" />
							<GradientStop Color="Blue" Offset="0.8" />
							<GradientStop Color="LightGray" Offset="1" />
						</LinearGradientBrush>
					</TextBlock.Foreground>
				</TextBlock>
			</StackPanel>
		</StackPanel>
	</ScrollViewer>
</Page>
