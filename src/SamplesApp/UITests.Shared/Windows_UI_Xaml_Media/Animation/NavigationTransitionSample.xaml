<Page
    x:Class="UITests.Windows_UI_Xaml_Media.Animation.NavigationTransitionSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Transition Type Selection  -->
        <StackPanel
            Grid.Row="0"
            Padding="8"
            Orientation="Horizontal"
            Spacing="8">
            <TextBlock VerticalAlignment="Center" Text="Transition:" />
            <ComboBox
                x:Name="TransitionSelector"
                Width="220"
                SelectedIndex="0">
                <ComboBoxItem Content="DrillIn" Tag="DrillIn" />
                <ComboBoxItem Content="Slide (FromBottom)" Tag="SlideFromBottom" />
                <ComboBoxItem Content="Slide (FromLeft)" Tag="SlideFromLeft" />
                <ComboBoxItem Content="Slide (FromRight)" Tag="SlideFromRight" />
                <ComboBoxItem Content="Entrance" Tag="Entrance" />
                <ComboBoxItem Content="Common" Tag="Common" />
                <ComboBoxItem Content="Continuum" Tag="Continuum" />
                <ComboBoxItem Content="Suppress (None)" Tag="Suppress" />
            </ComboBox>
        </StackPanel>

        <!--  Navigation Buttons  -->
        <StackPanel
            Grid.Row="1"
            Padding="8"
            Orientation="Horizontal"
            Spacing="8">
            <Button
                x:Name="BackButtonOuter"
                Click="OnGoBackClick"
                Content="Go Back"
                IsEnabled="False" />
            <Button
                x:Name="NavPage1Button"
                Click="OnNavigateToPage1Click"
                Content="Navigate to Blue Page" />
            <Button
                x:Name="NavPage2Button"
                Click="OnNavigateToPage2Click"
                Content="Navigate to Green Page" />
            <Button
                x:Name="NavPage3Button"
                Click="OnNavigateToPage3Click"
                Content="Navigate to Orange Page" />
        </StackPanel>

        <!--  Navigation Frame  -->
        <Border
            Grid.Row="2"
            Margin="8"
            BorderBrush="Gray"
            BorderThickness="1">
            <Frame x:Name="ContentFrame" Navigated="OnFrameNavigated">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition />
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </Border>
    </Grid>
</Page>
