<Page x:Class="UITests.Windows_UI_Xaml_Controls.GridView.GridView_ItemContainerStyle_Selection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    
    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                Padding="16">
        <TextBlock Text="GridView with ItemContainerStyle - Selection should still work"
                   Margin="0,0,0,16"
                   Style="{ThemeResource TitleTextBlockStyle}" />
        
        <TextBlock Text="Tap an item to select it. The selection border should be visible."
                   Margin="0,0,0,16"
                   Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
        
        <GridView SelectionMode="Single"
                  x:Name="TestGridView"
                  MaxWidth="400"
                  HorizontalAlignment="Left">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem" BasedOn="{StaticResource DefaultGridViewItemStyle}">
                    <Setter Property="Margin" Value="0,0,8,4"/>
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.Items>
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                        Width="100"
                        Height="100"
                        CornerRadius="4">
                    <TextBlock Text="Item 1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                </Border>
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                        Width="100"
                        Height="100"
                        CornerRadius="4">
                    <TextBlock Text="Item 2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                </Border>
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                        Width="100"
                        Height="100"
                        CornerRadius="4">
                    <TextBlock Text="Item 3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                </Border>
                <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                        Width="100"
                        Height="100"
                        CornerRadius="4">
                    <TextBlock Text="Item 4"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                </Border>
            </GridView.Items>
        </GridView>
    </StackPanel>
</Page>
