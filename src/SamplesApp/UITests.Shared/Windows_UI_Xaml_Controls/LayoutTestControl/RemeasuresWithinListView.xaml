<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.LayoutTestControl.RemeasuresWithinListView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.LayoutTestControl"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<UserControl.Resources>
		<ResourceDictionary Source="MeasureArrangeContentControl.xaml" />
	</UserControl.Resources>

	<controls:SampleControl SampleDescription="This sample a ListView with fixed height items and a flipview to test that swiping through the flipview doesn't relayout Parents">
		<local:MeasureArrangeContentControl>
			<local:MeasureArrangeContentControl.ContentTemplate>
				<DataTemplate>

					<ListView Margin="10,0,10,0"
							  HorizontalAlignment="Stretch"
							  VerticalAlignment="Stretch">

						<Grid Height="300"
							  HorizontalAlignment="Stretch"
							  VerticalAlignment="Stretch">

							<FlipView Margin="10"
									  Background="HotPink"
									  HorizontalAlignment="Stretch"
									  VerticalAlignment="Stretch">

								<TextBlock Text="SwipeMeRight" />
								<TextBlock Text="SwipeMeAgain" />
								<TextBlock Text="SwipeMeAgain2" />
								<TextBlock Text="SwipeMeLeft" />
							</FlipView>
						</Grid>

						<Grid Height="300"
							  HorizontalAlignment="Stretch"
							  VerticalAlignment="Stretch">

							<FlipView Margin="10"
									  Background="Orange"
									  HorizontalAlignment="Stretch"
									  VerticalAlignment="Stretch">

								<TextBlock Text="SwipeMeRight" />
								<TextBlock Text="SwipeMeAgain" />
								<TextBlock Text="SwipeMeAgain2" />
								<TextBlock Text="SwipeMeLeft" />
							</FlipView>
						</Grid>
					</ListView>
				</DataTemplate>
			</local:MeasureArrangeContentControl.ContentTemplate>
		</local:MeasureArrangeContentControl>
	</controls:SampleControl>
</UserControl>
