<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests.FlipView_With_Inline_Containers"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="FlipView with Items defined inline inside FlipViewItems">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				
				<Border Background="Linen"
						HorizontalAlignment="Center"
						VerticalAlignment="Center">

					<FlipView Width="300"
							  Height="150">

						<FlipViewItem>
							<TextBlock x:Name="firstItem"
									   Text="{Binding [Page1]}"
									   Foreground="DarkViolet"
									   FontSize="15" />
						</FlipViewItem>

						<FlipViewItem>
							<TextBlock x:Name="secondItem"
									   Text="{Binding [Page2]}"
									   Foreground="DarkViolet"
									   FontSize="15" />
						</FlipViewItem>

						<FlipViewItem>
							<TextBlock x:Name="thirdItem"
									   Text="{Binding [Page3]}"
									   Foreground="DarkViolet"
									   FontSize="15" />
						</FlipViewItem>
					</FlipView>
				</Border>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
