<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests.TappableFlipViewTest"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ios="http://uno.ui/ios"
			 xmlns:android="http://uno.ui/android"
			 xmlns:xamarin="http:///umbrella/ui/xamarin"
			 mc:Ignorable="ios android xamarin">

	<controls:SampleControl SampleDescription="TappableFlipViewTest">
		<controls:SampleControl.Resources>

			<Style x:Key="TappableFlipViewStyle"
				   TargetType="local:TappableFlipView">

				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate>
							<ItemsPresenter />
						</ControlTemplate>
					</Setter.Value>
				</Setter>

				<android:Setter Property="ItemsPanel">
					<Setter.Value>
						<ItemsPanelTemplate>
							<NativePagedView />
						</ItemsPanelTemplate>
					</Setter.Value>
				</android:Setter>

				<ios:Setter Property="ItemsPanel">
					<Setter.Value>
						<ItemsPanelTemplate>
							<PagedCollectionView />
						</ItemsPanelTemplate>
					</Setter.Value>
				</ios:Setter>
			</Style>
		</controls:SampleControl.Resources>

		<controls:SampleControl.SampleContent>
			<DataTemplate>

				<local:TappableFlipView ItemsSource="{Binding [SampleItems]}"
										Width="300"
										Height="200"
										xamarin:Style="{StaticResource TappableFlipViewStyle}">

					<local:TappableFlipView.ItemTemplate>
						<DataTemplate>

							<Border BorderBrush="Blue"
									BorderThickness="3">
								<StackPanel>

									<TextBlock Height="20"
											   Foreground="Blue">
										<Run Text="Image: " />
										<Run Text="{Binding Uri}" />
									</TextBlock>

									<Image Source="{Binding Uri}"
										   Width="200"
										   Height="100" />
								</StackPanel>
							</Border>
						</DataTemplate>
					</local:TappableFlipView.ItemTemplate>
				</local:TappableFlipView>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
