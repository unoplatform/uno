<Page
    x:Class="UITests.Windows_UI_Xaml_Controls.RelativePanelTests.RelativePanel_AlignHorizontalVerticalCenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Windows_UI_Xaml_Controls.RelativePanelTests"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
		<RelativePanel Width="500" Height="400" Background="Yellow">
			<TextBlock Foreground="Black" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">This text should be centered horizontally and vertically.</TextBlock>
		</RelativePanel>
	</Grid>
</Page>
