<Page
	x:Class="UITests.Windows_UI_Xaml_Controls.ImageTests.Image_Svg"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<StackPanel Spacing="8" Margin="15" VerticalAlignment="Top">
			<TextBox x:Name="url" Header="Image Url" Text="https://nv-assets.azurewebsites.net/tests/images/uno-overalls.svg" />
			<CheckBox x:Name="streamMode">Use streaming mode instead of url</CheckBox>
			<StackPanel Orientation="Horizontal" Spacing="6">
				<Button Click="LoadClicked" Tag="BitmapImage">Load w/BitmapImage</Button>
				<Button Click="LoadClicked" Tag="SvgImageSource">Load w/SvgImageSource</Button>
				<Button Click="LoadClicked" Tag="SvgImageSource2">Load w/SvgImageSource +size</Button>
			</StackPanel>
		</StackPanel>
		<Border BorderBrush="DarkGreen" BorderThickness="1" Grid.Row="1" Padding="20" Background="Firebrick">
			<Image x:Name="img1" />
		</Border>
		<TextBlock x:Name="log" Grid.Row="1" />
	</Grid>
</Page>
