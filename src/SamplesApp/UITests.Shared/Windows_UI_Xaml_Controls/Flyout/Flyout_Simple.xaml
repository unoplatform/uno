<UserControl x:Class="Uno.UI.Samples.Content.UITests.Flyout.Flyout_Simple"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="GenericApp.Views.Content.UITests.Flyout"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:u="using:Uno.UI.Samples.Controls"
			 xmlns:uBehaviors="using:Uno.UI.Samples.Behaviors"
			 xmlns:ios="http://nventive.com/ios"
			 xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:android="http://nventive.com/android"
			 mc:Ignorable="d ios android"
			 d:DesignHeight="2000"
			 d:DesignWidth="400">

	<UserControl.Resources>
		<Style x:Key="SampleFlyoutPresenterStyle"
			   TargetType="FlyoutPresenter">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="FlyoutPresenter">
						<Border BorderBrush="Tomato"
								BorderThickness="2">
							<ContentPresenter Content="{TemplateBinding Content}" />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style x:Key="CenteredFlyoutPresenterStyle" TargetType="FlyoutPresenter">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="FlyoutPresenter">
						<ContentPresenter Content="{TemplateBinding Content}"
										  HorizontalAlignment="Center"
										  VerticalAlignment="Center" />
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>

	<controls:SampleControl SampleDescription="Flyout tests">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<StackPanel HorizontalAlignment="Center">
					<Button Content="Show Flyout Left"
							Height="50"
							Width="150">
						<Button.Flyout>
							<Flyout Placement="Left"
									FlyoutPresenterStyle="{StaticResource SampleFlyoutPresenterStyle}">
								<Border Background="Blue"
										Height="180"
										Width="180">
								</Border>
							</Flyout>
						</Button.Flyout>
					</Button>
					<Button Content="Show Flyout Right"
							Height="50"
							Width="150">
						<Button.Flyout>
							<Flyout Placement="Right"
									FlyoutPresenterStyle="{StaticResource SampleFlyoutPresenterStyle}">
								<Border Background="Blue"
										Height="180"
										Width="180">
								</Border>
							</Flyout>
						</Button.Flyout>
					</Button>
					<Button Content="Show Flyout Bottom"
							x:Name="FlyoutToBottomButton"
							Height="50"
							Width="150">
						<Button.Flyout>
							<Flyout Placement="Bottom"
									x:Name="BottomFlyout"
									x:Uid="BottomFlyout">
								<Border Background="Blue"
										Height="180"
										Width="180">
								</Border>
							</Flyout>
						</Button.Flyout>
					</Button>
					<Button Content="Show Flyout Top"
							Height="50"
							Width="150">
						<Button.Flyout>
							<Flyout Placement="Top">
								<Border Background="Blue"
										Height="80"
										Width="80">
								</Border>
							</Flyout>
						</Button.Flyout>
					</Button>
					<Button Content="Show Flyout Full"
							Height="50"
							Width="150">
						<Button.Flyout>
							<Flyout Placement="Full">
								<Border Background="Blue"
										Height="80"
										Width="80">
								</Border>
							</Flyout>
						</Button.Flyout>
					</Button>

					<Button Content="Show Flyout Centered Full"
							Height="50"
							Width="150">
						<Button.Flyout>
							<Flyout Placement="Full" FlyoutPresenterStyle="{StaticResource CenteredFlyoutPresenterStyle}">
								<Border Background="SkyBlue"
										Height="80"
										Width="80">
								</Border>
							</Flyout>
						</Button.Flyout>
					</Button>

					<Button Content="Show Flyout Full Overlay"
							Height="50"
							Width="150">
						<Button.Flyout>
							<Flyout Placement="Full">
								<Border Background="#80000000">
									<Border Background="Blue"
											VerticalAlignment="Center"
											HorizontalAlignment="Center"
											Height="80"
											Width="80">
									</Border>
								</Border>
							</Flyout>
						</Button.Flyout>
					</Button>

					<Button Content="Show Flyout W/offset"
							Margin="100"
							Height="50"
							Width="150">
						<Button.Flyout>
							<Flyout Placement="Left">
								<Border Background="Blue"
										Height="80"
										Width="80">
								</Border>
							</Flyout>
						</Button.Flyout>
					</Button>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
