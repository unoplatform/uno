<Page
    x:Class="UITests.Windows_UI_Xaml_Controls.SwipeControlTests.SwipeControl_Modes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UITests.Windows_UI_Xaml_Controls.SwipeControlTests"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <TabView>
        <TabViewItem Header="Execute Horizontal">
            <!--  SwipeItems mode set to Execute and appears to work correctly  -->
            <ListView Height="500" ItemsSource="{x:Bind ItemsUsingExecute}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:SwipeControlModesModel">
                        <SwipeControl>
                            <SwipeControl.LeftItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem
                                        Background="Orange"
                                        Foreground="Black"
                                        Text="Make Offline" />
                                </SwipeItems>
                            </SwipeControl.LeftItems>
                            <SwipeControl.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem
                                        Background="Orange"
                                        Foreground="Black"
                                        Text="Make Offline" />
                                </SwipeItems>
                            </SwipeControl.RightItems>
                            <Grid Background="LightBlue">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="16"
                                    HorizontalAlignment="Stretch"
                                    Text="{Binding DisplayName}" />

                                <Rectangle
                                    Grid.Row="1"
                                    Height="2"
                                    Background="Black" />
                            </Grid>
                        </SwipeControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </TabViewItem>
        <TabViewItem Header="Reveal Horizontal">
            <!--  SwipeItems mode set to Reveal and appears to work correctly  -->
            <ListView ItemsSource="{x:Bind ItemsUsingReveal}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:SwipeControlModesModel">
                        <SwipeControl>
                            <SwipeControl.LeftItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem
                                        Background="Orange"
                                        Foreground="Black"
                                        Text="First">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Home" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                    <SwipeItem
                                        Background="Lime"
                                        Foreground="Black"
                                        Text="Second">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Emoji" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                    <SwipeItem
                                        Background="DeepSkyBlue"
                                        Foreground="Black"
                                        Text="Third">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Like" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                </SwipeItems>
                            </SwipeControl.LeftItems>
                            <SwipeControl.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem
                                        Background="Orange"
                                        Foreground="Black"
                                        Text="First">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Home" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                    <SwipeItem
                                        Background="Lime"
                                        Foreground="Black"
                                        Text="Second">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Emoji" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                    <SwipeItem
                                        Background="DeepSkyBlue"
                                        Foreground="Black"
                                        Text="Third">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Like" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                </SwipeItems>
                            </SwipeControl.RightItems>
                            <Grid Background="LightPink">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="16"
                                    HorizontalAlignment="Stretch"
                                    Text="{Binding DisplayName}" />

                                <Rectangle
                                    Grid.Row="1"
                                    Height="2"
                                    Background="Black" />
                            </Grid>
                        </SwipeControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </TabViewItem>

        <TabViewItem Header="Execute Vertical">
            <!--  SwipeItems mode set to Execute and appears to work correctly  -->
            <ListView Height="500" ItemsSource="{x:Bind ItemsUsingExecute}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:MainModel">
                        <SwipeControl>
                            <SwipeControl.TopItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem
                                        Background="Orange"
                                        Foreground="Black"
                                        Text="Make Offline" />
                                </SwipeItems>
                            </SwipeControl.TopItems>
                            <SwipeControl.BottomItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem
                                        Background="Orange"
                                        Foreground="Black"
                                        Text="Make Offline" />
                                </SwipeItems>
                            </SwipeControl.BottomItems>
                            <Grid Background="LightBlue">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="16"
                                    HorizontalAlignment="Stretch"
                                    Text="{Binding DisplayName}" />

                                <Rectangle
                                    Grid.Row="1"
                                    Height="2"
                                    Background="Black" />
                            </Grid>
                        </SwipeControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </TabViewItem>
        <TabViewItem Header="Reveal Vertical">
            <!--  SwipeItems mode set to Reveal and appears to work correctly  -->
            <ListView ItemsSource="{x:Bind ItemsUsingReveal}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:MainModel">
                        <SwipeControl>
                            <SwipeControl.TopItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem
                                        Background="Orange"
                                        Foreground="Black"
                                        Text="First">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Home" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                    <SwipeItem
                                        Background="Lime"
                                        Foreground="Black"
                                        Text="Second">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Emoji" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                </SwipeItems>
                            </SwipeControl.TopItems>
                            <SwipeControl.BottomItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem
                                        Background="Orange"
                                        Foreground="Black"
                                        Text="First">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Home" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                    <SwipeItem
                                        Background="Lime"
                                        Foreground="Black"
                                        Text="Second">
                                        <SwipeItem.IconSource>
                                            <SymbolIconSource Symbol="Emoji" />
                                        </SwipeItem.IconSource>
                                    </SwipeItem>
                                </SwipeItems>
                            </SwipeControl.BottomItems>
                            <Grid Height="160" Background="LightPink">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="16"
                                    HorizontalAlignment="Stretch"
                                    Text="{Binding DisplayName}" />

                                <Rectangle
                                    Grid.Row="1"
                                    Height="2"
                                    Background="Black" />
                            </Grid>
                        </SwipeControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </TabViewItem>
    </TabView>
</Page>
