<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.Slider.Slider_Simple" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:u="using:Uno.UI.Samples.Controls"
	xmlns:ios="http://uno.ui/ios"
	xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:android="http://uno.ui/android"
	mc:Ignorable="d ios android"
	d:DesignHeight="400"
	d:DesignWidth="400">

	<Grid>
		<StackPanel>
			<Slider x:Name="mySlider" 
					Header="My Slider"
					Foreground="Red" 
					Background="Green" />
			<TextBlock>
				<Run Text="Horizontal Value: " /><Run Text="{Binding Value, ElementName=mySlider}" />
			</TextBlock>
			<Slider x:Name="mySlider2"
					Height="200"
					Header="My Slider"
					Foreground="Red" 
					Background="Green"
					Orientation="Vertical" />
			<TextBlock>
				<Run Text="Vertical Value: " /><Run Text="{Binding Value, ElementName=mySlider2}" />
			</TextBlock>

		</StackPanel>
	</Grid>
</UserControl>
