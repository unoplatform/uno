<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.TextBoxControl.Input_Test_NoScrollViewer_Automated"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<StackPanel Padding="16,0">
		<Button x:Name="UnfocusButton">Unfocus</Button>

		<!-- Normal Label -->
		<TextBlock Text="Normal"
								FontSize="16" />

		<!-- Normal TextBox -->
		<Border BorderBrush="Black"
						BorderThickness="2"
						Margin="0,4,0,0"
						Padding="4">
			<TextBox x:Name="NormalTextBox"
								FontSize="16"/>
		</Border>

		<!-- Filled Label -->
		<TextBlock Text="Filled"
								FontSize="16"
								Margin="0,4,0,0" />

		<!-- Filled TextBox -->
		<Border BorderBrush="Black"
						BorderThickness="2"
						Margin="0,4,0,0"
						Padding="4">
			<TextBox x:Name="FilledTextBox"
								Text="Text"
								FontSize="16" />
		</Border>

		<!-- PlaceholderText Label -->
		<TextBlock Text="PlaceholderText"
								FontSize="16"
								Margin="0,4,0,0"/>

		<!-- PlaceholderText TextBox -->
		<Border BorderBrush="Black"
						BorderThickness="2"
						Margin="0,4,0,0"
						Padding="4">
			<TextBox x:Name="PlaceholderTextTextBox"
								PlaceholderText="PlaceholderText"
								FontSize="16" />
		</Border>

		<!-- Disabled Label -->
		<TextBlock Text="Disabled"
								FontSize="16"
								Margin="0,4,0,0" />

		<!-- Disabled TextBox -->
		<Border BorderBrush="Black"
						BorderThickness="2"
						Margin="0,4,0,0"
						Padding="4">
			<TextBox x:Name="DisabledTextBox"
								PlaceholderText="Disabled"
								IsEnabled="False"
								FontSize="16" />
		</Border>

		<!-- Multiline Label -->
		<TextBlock Text="Multiline"
								FontSize="16"
								Margin="0,4,0,0"  />

		<!-- Multiline TextBox -->
		<Border BorderBrush="Black"
						BorderThickness="2"
						Margin="0,4,0,0"
						Padding="4">
			<TextBox x:Name="MultilineTextBox"
								PlaceholderText="Multiline"
								AcceptsReturn="True"
								Height="100"
								FontSize="16" />
		</Border>

		<!--  Number Label -->
		<TextBlock Text="Number"
								FontSize="16"
								Margin="0,4,0,0"  />

		<!-- Number TextBox -->
		<Border BorderBrush="Black"
						BorderThickness="2"
						Margin="0,4,0,0"
						Padding="4">
			<TextBox x:Name="NumberTextBox"
								PlaceholderText="Number"
								InputScope="Number"
								FontSize="16" />
		</Border>
	</StackPanel>
</UserControl>
