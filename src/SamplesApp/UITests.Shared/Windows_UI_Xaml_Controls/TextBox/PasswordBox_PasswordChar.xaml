<UserControl x:Class="Uno.UI.Samples.Content.UITests.TextBoxControl.PasswordBox_PasswordChar"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<ScrollViewer>
			<StackPanel Margin="20">
				<TextBlock Text="PasswordBox PasswordChar Testing" 
						   Style="{ThemeResource HeaderTextBlockStyle}" 
						   Margin="0,0,0,20" />

				<TextBlock Text="Default PasswordChar:" Margin="0,0,0,5" />
				<PasswordBox x:Name="DefaultPasswordBox" 
							 Password="TestPassword" 
							 Margin="0,0,0,20" />

				<TextBlock Text="Custom PasswordChar (*):" Margin="0,0,0,5" />
				<PasswordBox x:Name="CustomPasswordBox" 
							 Password="TestPassword" 
							 PasswordChar="*" 
							 Margin="0,0,0,20" />

				<TextBlock Text="Custom PasswordChar (?):" Margin="0,0,0,5" />
				<PasswordBox x:Name="QuestionPasswordBox" 
							 Password="TestPassword" 
							 PasswordChar="?" 
							 Margin="0,0,0,20" />

				<TextBlock Text="Dollar Character ($):" Margin="0,0,0,5" />
				<PasswordBox x:Name="DollarPasswordBox" 
							 Password="TestPassword" 
							 PasswordChar="$" 
							 Margin="0,0,0,20" />

				<TextBlock Text="Change PasswordChar dynamically:" Margin="0,0,0,5" />
				<PasswordBox x:Name="DynamicPasswordBox" 
							 Password="TestPassword" 
							 Margin="0,0,0,10" />
				<StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
					<Button Content="Set to default" Click="SetDefaultChar_Click" />
					<Button Content="Set to *" Click="SetAsterisk_Click" />
					<Button Content="Set to ?" Click="SetQuestion_Click" />
					<Button Content="Set to $" Click="SetDollar_Click" />
				</StackPanel>

				<TextBlock Text="Current PasswordChar values:" 
						   Style="{ThemeResource SubheaderTextBlockStyle}" 
						   Margin="0,20,0,10" />
				<StackPanel x:Name="ValuesPanel">
					<TextBlock x:Name="DefaultValueText" Margin="0,0,0,5" />
					<TextBlock x:Name="CustomValueText" Margin="0,0,0,5" />
					<TextBlock x:Name="QuestionValueText" Margin="0,0,0,5" />
					<TextBlock x:Name="DollarValueText" Margin="0,0,0,5" />
					<TextBlock x:Name="DynamicValueText" Margin="0,0,0,5" />
				</StackPanel>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</UserControl>
