<UserControl
    x:Class="Uno.UI.Samples.Content.UITests.TextBoxControl.TextBox_Multiple_Focus_Keyboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="35">
            <TextBox Margin="10" PlaceholderText="Normal" />
            <TextBox Margin="10" PlaceholderText="Focused" />
            <TextBox
                Margin="10,0"
                IsEnabled="False"
                PlaceholderText="Disabled" />

            <TextBox Margin="10,0" PlaceholderText="TextBox 1" />

            <TextBox Margin="10,0" PlaceholderText="TextBox 2" />

            <TextBox Margin="10,0" PlaceholderText="TextBox 3" />

            <TextBox Margin="10,0" PlaceholderText="TextBox 4" />

            <TextBox Margin="10,0" PlaceholderText="TextBox 5" />

            <TextBox Margin="10,0" PlaceholderText="TextBox 6" />

            <TextBox Margin="10,0" PlaceholderText="TextBox 7" />

            <TextBox Margin="10,0" PlaceholderText="TextBox 8" />

            <TextBox Margin="10,0" PlaceholderText="TextBox 9" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
