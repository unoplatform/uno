<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.TextBoxControl.TextBox_DeleteButton"
	xmlns:controls="using:Uno.UI.Samples.Controls"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ios="http://uno.ui/ios"
	xmlns:xamarin="http://uno.ui/xamarin"
	xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:android="http://uno.ui/android"
	mc:Ignorable="d ios android xamarin"
	d:DesignHeight="2000"
	d:DesignWidth="400">

	<controls:SampleControl SampleDescription="TextBox with a delete button">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<StackPanel>
					<TextBox Text="{Binding [MyInput], Mode=TwoWay}"/>

					<TextBlock Text="Click on this textbox to change the focus" />
					<TextBox/>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
