<Page
    x:Class="UITests.Microsoft_UI_Windowing.TitleBarAndBorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="12">
        <StackPanel Spacing="8">
            <TextBlock Text="Manual sample demonstrating SetBorderAndTitleBar and ExtendsContentIntoTitleBar APIs" TextWrapping="Wrap"/>

            <StackPanel Spacing="4">
                <TextBlock Text="ExtendsContentIntoTitleBar" FontWeight="Bold" />
                <CheckBox x:Name="WindowExtends" Content="Window.ExtendsContentIntoTitleBar" Checked="OnWindowExtendsChecked" Unchecked="OnWindowExtendsUnchecked"/>
                <CheckBox x:Name="AppWindowExtends" Content="AppWindow.TitleBar.ExtendsContentIntoTitleBar" Checked="OnAppWindowExtendsChecked" Unchecked="OnAppWindowExtendsUnchecked"/>
                <TextBlock Text="Note: Effects depend on platform support." TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="SetBorderAndTitleBar (OverlappedPresenter)" FontWeight="Bold" />
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <CheckBox x:Name="HasBorderCheck" Content="Has border"/>
                    <CheckBox x:Name="HasTitleBarCheck" Content="Has title bar"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Click="OnApplySetBorderAndTitleBar">Apply SetBorderAndTitleBar</Button>
                    <Button Click="OnResetPresenter">Reset presenter</Button>
                </StackPanel>
                <TextBlock x:Name="PresenterNameText"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
