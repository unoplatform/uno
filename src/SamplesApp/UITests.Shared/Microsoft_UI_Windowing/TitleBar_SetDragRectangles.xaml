<Page
    x:Class="UITests.Microsoft_UI_Windowing.TitleBar_SetDragRectangles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Padding="12" Spacing="8">
            <TextBlock Text="Manual sample demonstrating AppWindowTitleBar.SetDragRectangles" TextWrapping="Wrap" />

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button
                    x:Name="GenerateButton"
                    Click="OnGenerateClick"
                    Content="Generate Grid + Rectangles" />
                <Button
                    x:Name="ApplyButton"
                    Click="OnApplyClick"
                    Content="Apply Drag Rectangles" />
                <Button
                    x:Name="ResetButton"
                    Click="OnResetClick"
                    Content="Reset Drag Rectangles" />
            </StackPanel>
            <TextBlock x:Name="StatusText" TextWrapping="Wrap" />
        </StackPanel>

        <Grid
            x:Name="DynamicGrid"
            Grid.Row="1"
            Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" />
    </Grid>
</Page>
