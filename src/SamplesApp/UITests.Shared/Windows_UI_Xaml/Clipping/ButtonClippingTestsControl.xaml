<UserControl
	x:Class="SamplesApp.Windows_UI_Xaml.Clipping.ButtonClippingTestsControl" 
	xmlns:controls="using:Uno.UI.Samples.Controls"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:u="using:Uno.UI.Samples.Controls"
	xmlns:uBehaviors="using:Uno.UI.Samples.Behaviors"
	xmlns:ios="http://uno.ui/ios"
	xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:android="http://uno.ui/android"
	mc:Ignorable="d ios android"
	d:DesignHeight="2000"
	d:DesignWidth="400">

	<controls:SampleControl SampleDescription="Button clipped">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<StackPanel>
					<TextBlock Text="{Binding [Message]}" />
					<TextBlock Text="Overlapped clipped buttons" />
					<Grid>
						<StackPanel Width="200"
									Height="200">
							<StackPanel.Clip>
								<RectangleGeometry Rect="0,0,100,100" />
							</StackPanel.Clip>
							<Button Width="200"
									Height="200"
									x:Name="ButtonUnder"
									Content="Clipped button under" 
									Command="{Binding [SampleCommand]}"/>
						</StackPanel>
						<StackPanel Width="200"
									Height="200">
							<StackPanel.Clip>
								<RectangleGeometry Rect="0,0,50,50" />
							</StackPanel.Clip>
							<Button Width="200"
									Height="200"
									x:Name="ButtonOver"
									Content="Clipped button over" 
									Command="{Binding [SampleCommand2]}"/>
						</StackPanel>
					</Grid>
					
					<TextBlock Text="No clipping" />
					<Button Background="DeepPink"
							Width="200"
							Height="100"
							Content="Clipped button"
							Command="{Binding [SampleCommand]}" />
					
					<TextBlock Text="Direct clipping" />
					<Button Background="DeepPink"
							Width="200"
							Height="100"
							Content="Clipped button"
							Command="{Binding [SampleCommand]}">
						<Button.Clip>
							<RectangleGeometry Rect="0,0,100,50" />
						</Button.Clip>
					</Button>
					
					<TextBlock Text="Parent clipping" />
					<StackPanel Width="200"
								Height="100">
						<StackPanel.Clip>
							<RectangleGeometry Rect="0,0,50,50" />
						</StackPanel.Clip>
						<Button Background="Red"
								Width="200"
								Height="100"
								Content="Clipped button"
								Command="{Binding [SampleCommand]}"/>
					</StackPanel>
					
					<TextBlock Text="Parent clipping with offset position" />
					<StackPanel Width="200"
								Height="100">
						<StackPanel.Clip>
							<RectangleGeometry Rect="50,50,50,50" />
						</StackPanel.Clip>
						<Button Background="Green"
								Width="200"
								Height="100"
								Content="Clipped button"
								Command="{Binding [SampleCommand]}"/>
					</StackPanel>
					
					<TextBlock Text="Parent clipping with content offset position" />
					<StackPanel Width="200"
								Height="100">
						<StackPanel.Clip>
							<RectangleGeometry Rect="0,0,50,50" />
						</StackPanel.Clip>
						<Button Background="Blue"
								Margin="20,20,0,0"
								Width="200"
								Height="100"
								Content="Clipped button"
								Command="{Binding [SampleCommand]}"/>
					</StackPanel>
					
					<TextBlock Text="Multi-layer parent clipping" />
					<StackPanel Width="400"
								Height="200">
						<StackPanel.Clip>
							<RectangleGeometry Rect="0,0,50,25" />
						</StackPanel.Clip>
						<StackPanel Width="400"
									Height="200">
							<StackPanel.Clip>
								<RectangleGeometry Rect="0,0,25,75" />
							</StackPanel.Clip>
							<Button Background="White"
									Width="400"
									Height="200"
									Content="Clipped button"
									Command="{Binding [SampleCommand]}"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
