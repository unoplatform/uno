<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.TouchEventsTests.TouchRotated"
	xmlns:controls="using:Uno.UI.Samples.Controls"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="Uno.UI.Samples.Content.UITests.TouchEventsTests"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:u="using:Uno.UI.Samples.Controls"
	xmlns:ios="http://uno.ui/ios"
	xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:android="http://uno.ui/android"
	xmlns:xamarin="http://uno.ui/xamarin"
	mc:Ignorable="d ios android xamarin"
	d:DesignHeight="2000"
	d:DesignWidth="400">

	<StackPanel>
		<TextBlock x:Name="ClickTextBlock" Text="Button clicked 0 times" />
		<Grid Width="300"
				Height="200"
					Margin="0,150,0,0"
				Background="Beige"
				RenderTransformOrigin=".5,.5">
			<Grid.RenderTransform>
				<RotateTransform Angle="90" />
			</Grid.RenderTransform>
			<Button HorizontalAlignment="Right"
					VerticalAlignment="Top"
							xamarin:Style="{StaticResource XamlDefaultButton}"
					Click="OnButtonClicked">
				<Border Width="40"
						Height="60"
						Background="Blue" />
			</Button>
		</Grid>
	</StackPanel>
</UserControl>