<Page
    x:Class="Uno.UI.Samples.Content.UITests.XBind.PhaseBinding_Large"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Uno.UI.Samples.Content.UITests.Performance"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:u="using:Uno.UI.Samples.Controls"
    xmlns:legacy="using:Uno.UI.Controls.Legacy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:not_win="http://uno.ui/not_win"
	  xmlns:uloc="http://nventive.com/localization/1.0"
    mc:Ignorable="d not_win uloc"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<UserControl.Resources>
		<ResourceDictionary>
			<Style x:Key="TitleLeftRectangleStyle"
					 TargetType="Rectangle">
				<Setter Property="Height"
						Value="2" />
				<Setter Property="Margin"
						Value="10,0,20,0" />
				<Setter Property="VerticalAlignment"
						Value="Center" />
			</Style>

			<Style x:Key="TitleRightRectangleStyle"
					 TargetType="Rectangle"
					 BasedOn="{StaticResource TitleLeftRectangleStyle}">
				<Setter Property="Margin"
						Value="20,0,10,0" />
			</Style>

			<DataTemplate x:Key="SimilarFlightsCheckInButtonTemplate">
				<Grid Margin="10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<Button Content="Similar Flight"
							Margin="0,0,5,0" />

					<Button Content="Checkin"
							Margin="5,0,0,0"
							Grid.Column="1" />
				</Grid>
			</DataTemplate>

			<DataTemplate x:Key="DirectFlightWithTitleAndButtonTemplate">
				<Grid Height="382">
					<Grid.RowDefinitions>
						<RowDefinition Height="26" />
						<RowDefinition Height="300" />
						<RowDefinition Height="56" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<Rectangle Style="{StaticResource TitleLeftRectangleStyle}"
								 Fill="Red" />

					<TextBlock not_win:Phase="0" Text="{Binding}"
								 VerticalAlignment="Center"
								 Grid.Column="1" />

					<Rectangle Style="{StaticResource TitleRightRectangleStyle}"
								 Fill="Red"
								 Grid.Column="2" />

					<Grid Height="300"
								Grid.Row="1"
								Grid.ColumnSpan="3">
						<Grid.RowDefinitions>
							<!-- 0: Flight and status -->
							<RowDefinition Height="31" />

							<!-- 1: Detailed flight status -->
							<RowDefinition Height="17" />

							<!-- 2: Departure and Arrival airports -->
							<RowDefinition Height="18" />

							<!-- 3: Departure and Arrival times -->
							<RowDefinition Height="24" />

							<!-- 4: Date and flight length + separator -->
							<RowDefinition Height="36" />

							<!-- 5: Terminals -->
							<RowDefinition Height="66" />

							<!-- 6: Pass type -->
							<RowDefinition Height="32" />

							<!-- 7: JOY -->
							<RowDefinition Height="24" />

							<!-- 8: Waiting -->
							<RowDefinition Height="52" />
						</Grid.RowDefinitions>

						<TextBlock not_win:Phase="1"
									VerticalAlignment="Center"
									 HorizontalAlignment="Left"
									 Margin="40,5,0,0">
							<Run Text="{Binding}" />
							<Run Text="{Binding}" />
						</TextBlock>

						<TextBlock not_win:Phase="1" 
											 Text="{Binding}"
											 HorizontalAlignment="Right"
											 VerticalAlignment="Center"
											 Margin="0,5,35,0" />

						<!-- Row 1 -->
						<TextBlock  not_win:Phase="1"
											 Text="{Binding}"
									 Grid.Row="1"
									 HorizontalAlignment="Right"
									 Margin="0,0,10,0" />

						<!-- Row 2 -->
						<TextBlock not_win:Phase="2"
											 Text="{Binding}"
									 Grid.Row="2"
									 Margin="10,0,0,0"
									 VerticalAlignment="Center"
									 HorizontalAlignment="Left" />

						<TextBlock not_win:Phase="2"
											 Grid.Row="2"
									 VerticalAlignment="Center"
									 HorizontalAlignment="Center">
							<Run Text="Updated at: "
								 x:Uid="FlightTemplates_UpdateTime"
								 uloc:Localize="Text" />
							<Run Text="{Binding}" />
						</TextBlock>

						<TextBlock  not_win:Phase="2"
											 Text="{Binding}"
									 Grid.Row="2"
									 VerticalAlignment="Center"
									 HorizontalAlignment="Right"
									 Margin="0,0,10,0" />


						<!-- Row 4 -->
						<TextBlock  not_win:Phase="3"
											 Text="{Binding}"
									 Grid.Row="4"
									 Margin="10,0,0,0"
									 VerticalAlignment="Center"
									 HorizontalAlignment="Left" />

						<TextBlock  not_win:Phase="3"
											 Text="{Binding}"
									 Grid.Row="4"
									 VerticalAlignment="Center"
									 HorizontalAlignment="Center" />

						<TextBlock  not_win:Phase="3"
											 Text="{Binding}"
									 Grid.Row="4"
									 VerticalAlignment="Center"
									 Margin="0,0,10,0"
									 HorizontalAlignment="Right" />

						<Rectangle Grid.Row="4"
									 VerticalAlignment="Bottom" />

						<!-- Row 5 -->

						<!-- Departure terminal + gate -->
						<Grid 
											 Margin="10,0,0,0"
								HorizontalAlignment="Left"
								VerticalAlignment="Center"
								Grid.Row="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>

							<!-- Terminal -->
							<TextBlock  not_win:Phase="4"
													Text="TERMINAL"
										 x:Uid="FlightTemplates_Terminal"
										 uloc:Localize="Text"
										 Margin="0,0,5,5" />

							<TextBlock  not_win:Phase="4"
													Text="{Binding}"
										 Margin="0,0,0,5"
										 Grid.Column="1" />

							<!-- Gate -->
							<TextBlock  not_win:Phase="4"
													Text="GATE"
										 x:Uid="FlightTemplates_Gate"
										 uloc:Localize="Text"
										 Grid.Row="1"
										 Margin="0,5,5,0" />

							<TextBlock  not_win:Phase="4"
													Text="{Binding}"
										 Margin="0,5,0,0"
										 Grid.Row="1"
										 Grid.Column="1" />
						</Grid>

						<!-- Seat -->
						<StackPanel 
									Grid.Row="5"
									VerticalAlignment="Center"
									HorizontalAlignment="Center">
							<TextBlock  not_win:Phase="5" Text="SEAT"
										 VerticalAlignment="Center"
										 x:Uid="FlightTemplates_Seat"
										 uloc:Localize="Text"
										 Margin="0,0,0,5"
										 HorizontalAlignment="Center" />

							<!--TODO: Task# 1765 Display Cabin info (seat is contained in cabin info)-->
							<TextBlock  not_win:Phase="5"
													Text="{Binding}"
										 Margin="0,5,0,0"
										 HorizontalAlignment="Center" />
						</StackPanel>

						<!-- Arrival terminal + gate -->
						<Grid Margin="0,0,10,0"
								HorizontalAlignment="Right"
								VerticalAlignment="Center"
								Grid.Row="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>

							<!-- Terminal -->
							<TextBlock  not_win:Phase="6"
													Text="TERMINAL"
										 x:Uid="FlightTemplates_Terminal"
										 uloc:Localize="Text"
										 HorizontalAlignment="Right"
										 Margin="0,0,0,5" />

							<TextBlock Text="{Binding}"
												  not_win:Phase="6"
										 Margin="5,0,0,5"
										 Grid.Column="1" />

							<!-- Gate -->
							<TextBlock  not_win:Phase="6"
													Text="GATE"
										 x:Uid="FlightTemplates_Gate"
										 uloc:Localize="Text"
										 Grid.Row="1"
										 HorizontalAlignment="Right"
										 Margin="0,5,0,0" />

							<TextBlock Text="{Binding}"
												  not_win:Phase="6"
										 Margin="5,5,0,0"
										 Grid.Row="1"
										 Grid.Column="1" />
						</Grid>

						<!-- Row 6 -->
						<TextBlock 
									Grid.Row="6"
									not_win:Phase="7"
									 HorizontalAlignment="Left"
									 Margin="10,0,0,0"
									 VerticalAlignment="Center">
							<Run Text="PASS TYPE"
								 x:Uid="FlightTemplates_PassType"
								 uloc:Localize="Text" />
							<Run Text="{Binding}" />
						</TextBlock>

						<TextBlock  not_win:Phase="7"
									Text="{Binding}"
									 HorizontalAlignment="Right"
									 VerticalAlignment="Center"
									 Grid.Row="6"
									 Margin="0,0,10,0" />

						<!-- Row 7 -->
						<u:StarStackPanel  not_win:Phase="8"
									Orientation="Horizontal"
											VerticalAlignment="Top"
											Grid.Row="7">
							<TextBlock>
								<Run Text="{Binding}"/>
								<Run Text="{Binding}" />
								<Run Text="/" />
								<Run Text="{Binding}" />
							</TextBlock>

							<TextBlock>
								<Run Text="{Binding}"/>
								<Run Text="{Binding}" />
								<Run Text="/" />
								<Run Text="{Binding}" />
							</TextBlock>

							<TextBlock>
								<Run Text="{Binding}"/>
								<Run Text="{Binding}" />
								<Run Text="/" />
								<Run Text="{Binding}" />
							</TextBlock>
						</u:StarStackPanel>

						<!-- Row 8 -->

						<!-- Is not DCS -->
						<TextBlock  not_win:Phase="9"
									Grid.Row="8"
									 VerticalAlignment="Center">
							<Run Text="Standby:"
								 x:Uid="FlightTemplates_PassengerWaiting"
								 uloc:Localize="Text" />
							<Run Text="{Binding}" />
						</TextBlock>

						<!-- Is DCS -->
						<u:StarStackPanel  not_win:Phase="10"
									Orientation="Horizontal"
											Grid.Row="8">
							<TextBlock>
								<Run Text="Standby:"
									 x:Uid="FlightTemplates_PassengerWaiting"
									 uloc:Localize="Text" />
								<Run Text="{Binding}" />
								<Run Text="In front:"
									 x:Uid="FlightTemplates_PassengerInFront"
									 uloc:Localize="Text" />
								<Run Text="{Binding}" />
							</TextBlock>

							<TextBlock>
								<Run Text="Standby:"
									 x:Uid="FlightTemplates_PassengerWaiting"
									 uloc:Localize="Text" />
								<Run Text="{Binding}" />
								<Run Text="
								 In front:"
									 x:Uid="FlightTemplates_PassengerInFront"
									 uloc:Localize="Text" />
								<Run Text="{Binding}" />
							</TextBlock>

							<TextBlock>
								<Run Text="Standby:"
									 x:Uid="FlightTemplates_PassengerWaiting"
									 uloc:Localize="Text" />
								<Run Text="{Binding}" />
								<Run Text="
								 In front:"
									 x:Uid="FlightTemplates_PassengerInFront"
									 uloc:Localize="Text" />
								<Run Text="{Binding}" />
							</TextBlock>
						</u:StarStackPanel>
					</Grid>

					<ContentControl not_win:Phase="11"
													ContentTemplate="{StaticResource SimilarFlightsCheckInButtonTemplate}"
									Content="{Binding}"
									Grid.Row="2"
									Grid.ColumnSpan="3"
									HorizontalContentAlignment="Stretch" />
				</Grid>
			</DataTemplate>
		</ResourceDictionary>
	</UserControl.Resources>

	<ListView ItemTemplate="{StaticResource DirectFlightWithTitleAndButtonTemplate}"
						ItemsSource="{x:Bind MyItems}">
		<ListView.ItemContainerStyle>
				<not_win:Style TargetType="ListViewItem"
					 x:Key="ListViewItemExpanded">
					<Setter Property="FontFamily"
							Value="{ThemeResource ContentControlThemeFontFamily}" />
					<Setter Property="FontSize"
							Value="{ThemeResource ControlContentThemeFontSize}" />
					<Setter Property="Background"
							Value="Transparent" />
					<Setter Property="Foreground"
							Value="{ThemeResource SystemControlForegroundBaseHighBrush}" />
					<Setter Property="TabNavigation"
							Value="Local" />
					<Setter Property="IsHoldingEnabled"
							Value="True" />
					<Setter Property="Padding"
							Value="12,0,12,0" />
					<Setter Property="HorizontalContentAlignment"
							Value="Left" />
					<Setter Property="VerticalContentAlignment"
							Value="Center" />
					<Setter Property="MinWidth"
							Value="{ThemeResource ListViewItemMinWidth}" />
					<Setter Property="MinHeight"
							Value="{ThemeResource ListViewItemMinHeight}" />
					<Setter Property="UseSystemFocusVisuals"
							Value="True" />
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="ListViewItem">
										<ContentPresenter x:Name="ContentPresenter"
															ContentTransitions="{TemplateBinding ContentTransitions}"
															ContentTemplate="{TemplateBinding ContentTemplate}"
															Content="{TemplateBinding Content}"
															HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
															VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
															Margin="{TemplateBinding Padding}" />
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</not_win:Style>
		</ListView.ItemContainerStyle>
	</ListView>

</Page>
