	<ItemGroup>
	  <Compile Update="Properties\Resources.Designer.cs">
	    <DesignTime>True</DesignTime>
	  </Compile>
	</ItemGroup>

	<Import Project="..\..\..\build\*.Skia.Wpf.props" />
	<Import Project="..\..\..\build\*.Skia.Wpf.targets" />

</Project>
