<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>$(NetPrevious)-android;$(NetCurrent)-android</TargetFrameworks>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<Import Project="../targetframework-override.props" />

	<PropertyGroup>
		<GeneratePackageOnBuild Condition="'$(Configuration)'=='Release'">true</GeneratePackageOnBuild>
		<authors>Uno Platform</authors>
		<PackageProjectUrl>https://github.com/unoplatform/uno</PackageProjectUrl>
		<PackageIcon>uno.png</PackageIcon>
		<RepositoryUrl>https://github.com/unoplatform/uno</RepositoryUrl>
		<Description>This package provides the platform support for Skia Android in Uno Platform projects.</Description>
		<Copyright>Copyright (C) 2015-$([System.DateTime]::Now.ToString(`yyyy`)) Uno Platform Inc. - all rights reserved</Copyright>

		<PackageId Condition="'$(UNO_UWP_BUILD)'!='true'">Uno.WinUI.Runtime.Skia.Android</PackageId>

		<RootNamespace>Uno.WinUI.Runtime.Skia.Android</RootNamespace>

		<UseCommonOverridePackage>true</UseCommonOverridePackage>
		<DefineConstants>$(DefineConstants);ANDROID_SKIA</DefineConstants>

		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\Common\uno.png" Pack="true" PackagePath="\" />
		<Compile Include="..\Uno.UI\ActivityHelper.Android.cs" />
		<Compile Include="..\Uno.UI\Extensions\PermissionsHelper.Android.cs" Link="PermissionsHelper.Android.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\DatePicker\NativeDatePickerFlyout.Android.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\TimePicker\NativeTimePickerFlyout.Android.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\TimePicker\NativeTimePickerFlyout.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\TimePicker\UnoTimePickerDialog.Android.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\Android\NativeWebViewWrapper.Android.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\Android\InternalWebClient.Android.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\Android\InternalWebChromeClient.Android.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Controls\WebView\Native\Android\UnoWebViewHandler.Android.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\NativeApplication.cs" />
		<Compile Include="..\Uno.UI\UI\Xaml\Window\Native\NativeWindowWrapper.Android.cs" />
		<Compile Include="..\Uno.UI\DelegateActivity.Android.cs" />
		<Compile Include="..\Uno.UI\OnActivityResultArgs.Android.cs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="SkiaSharp" />
		<PackageReference Include="HarfBuzzSharp" />
		<PackageReference Include="SkiaSharp.Views" />
		<PackageReference Include="Xamarin.AndroidX.AppCompat" />
		<!--<PackageReference Include="SkiaSharp.NativeAssets.Android" />
		<PackageReference Include="HarfBuzzSharp.NativeAssets.Android" />-->
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Uno.Foundation.Logging\Uno.Foundation.Logging.csproj" />
		<ProjectReference Include="..\Uno.Foundation\Uno.Foundation.netcoremobile.csproj" TreatAsPackageReference="false" PrivateAssets="all" />
		<ProjectReference Include="..\Uno.UI\Uno.UI.Skia.csproj" />
		<ProjectReference Include="..\Uno.UWP\Uno.netcoremobile.csproj" TreatAsPackageReference="false" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="build/*.*">
			<Pack>true</Pack>
			<PackagePath>build</PackagePath>
		</Content>
	</ItemGroup>

	<!--<Import Project="..\SourceGenerators\Uno.UI.Tasks\Content\Uno.UI.Tasks.targets" Condition="'$(SkipUnoResourceGeneration)' == '' " />-->

</Project>
