{
    "build": {
        "content": [
            {
                "files": ["api/**.yml", "api/index.md"]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "*.md"
                ],
                "exclude": [
                    "**/includes/**"
                ]
            }
        ],
        "resource": [
            {
				"files": [
					"images/**",
					"articles/**.png",
					"articles/**.jpg",
					"articles/**.gif",
					"articles/**.svg",
					"articles/llms/**"
				]
            }
        ],
        "overwrite": [
            {
                "files": ["apidoc/**.md"],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": ["default", "modern", "templates/uno"],
        "postProcessors": ["ExtractSearchIndex"],
        "markdownEngineName": "markdig",
        "markdownEngineProperties": {
            "markdigExtensions": [
                "abbreviations",
                "definitionlists",
                "tasklists",
                "footnotes",
                "diagrams"
            ]
        },
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false,
        "globalMetadata": {
            "_appLogoPath": "images/uno-logo.png",
            "_enableSearch": false,
            "_appFaviconPath": "images/UnoLogoSmall.png",
            "_disableContribution": false,
            "_gitContribute": {
              "branch": "master"
            },
            "_gitUrlPattern": "github"
        },
        "fileMetadata": {
          "_gitContribute": {
            "articles/external/uno.wasm.bootstrap/**.md": {
              "branch": "main"
            },
            "articles/external/uno.themes/**.md": {
              "branch": "master"
            },
            "articles/external/uno.toolkit.ui/**.md": {
              "branch": "main"
            },
            "articles/external/uno.check/**.md": {
              "branch": "main"
            },
            "articles/external/uno.xamlmerge.task/**.md": {
              "branch": "main"
            },
            "articles/external/figma-docs/**.md": {
              "branch": "main"
            },
            "articles/external/uno.resizetizer/**.md": {
              "branch": "main"
            },
            "articles/external/uno.uitest/**.md": {
              "branch": "master"
            },
            "articles/external/uno.extensions/**.md": {
              "branch": "main"
            }
          }
        },
        "sitemap": {
          "baseUrl": "https://platform.uno/docs/"
        }
    }
}
